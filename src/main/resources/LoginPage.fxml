<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.view.javafx.JavaFxLoginView"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0" alignment="CENTER">
            <children>
                <Label text="Cardify - Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Username" maxWidth="300.0"/>
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300.0"/>
                <Button fx:id="loginButton" text="Login" maxWidth="300.0" onAction="#onLoginClicked"/>
                <Button fx:id="registerButton" text="Registrati" maxWidth="300.0" onAction="#onRegisterClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
            </children>
        </VBox>

        <!-- Persistence indicator in bottom right corner -->
        <Label fx:id="persistenceLabel"
               text="Persistenza: File System (JSON)"
               style="-fx-font-size: 10px; -fx-text-fill: gray;"
               AnchorPane.bottomAnchor="5.0"
               AnchorPane.rightAnchor="10.0"/>
    </children>

</AnchorPane>
