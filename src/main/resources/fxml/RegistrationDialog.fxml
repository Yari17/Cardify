<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.javafx.FXRegistrationView"
            prefHeight="300.0" prefWidth="400.0">

    <children>
        <VBox spacing="12.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0" alignment="CENTER">
            <children>
                <Label text="Cardify - Registrazione" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Nome utente" maxWidth="300.0"/>
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300.0"/>
                <ComboBox fx:id="userTypeComboBox" promptText="Tipo utente" maxWidth="300.0"/>
                <Button fx:id="registerButton" text="Registrati" maxWidth="300.0" onAction="#onRegisterClicked"/>
                <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
            </children>
        </VBox>

        <!-- Persistence indicator in bottom right corner -->
        <Label fx:id="persistenceLabel"
               text="Persistenza: File System (JSON)"
               style="-fx-font-size: 10px; -fx-text-fill: gray;"
               AnchorPane.bottomAnchor="5.0"
               AnchorPane.rightAnchor="10.0"/>
    </children>

</AnchorPane>
