<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.collectorhomepage.FXCollectorHPView"
            prefHeight="800.0" prefWidth="1400.0"
            stylesheets="@../styles/theme.css, @../styles/navbar.css"
            styleClass="bg-main">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="nav-bar">

            <!-- Left Navigation Icons with Labels -->
            <!-- Homepage Button (disabled when on homepage) -->
            <VBox alignment="CENTER" spacing="5" styleClass="nav-button-container">
                <Button fx:id="homepageButton" styleClass="button-transparent" disable="true">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/homepage.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Homepage" styleClass="nav-label-disabled"/>
            </VBox>

            <!-- Collection Button -->
            <VBox alignment="CENTER" spacing="5" styleClass="nav-button-container"
                  onMouseEntered="#onNavButtonHoverEnter"
                  onMouseExited="#onNavButtonHoverExit">
                <Button fx:id="collectionButton" onAction="#onCollectionClicked" styleClass="button-transparent">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/collection.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Collection" styleClass="nav-label"/>
            </VBox>

            <!-- Trade Button -->
            <VBox alignment="CENTER" spacing="5" styleClass="nav-button-container"
                  onMouseEntered="#onNavButtonHoverEnter"
                  onMouseExited="#onNavButtonHoverExit">
                <Button fx:id="tradeButton" onAction="#onTradeClicked" styleClass="button-transparent">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/trade.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Trade" styleClass="nav-label"/>
            </VBox>

            <!-- Logout Button -->
            <VBox fx:id="logoutButtonContainer" alignment="CENTER" spacing="5" styleClass="nav-button-container"
                  onMouseEntered="#onNavButtonHoverEnter"
                  onMouseExited="#onNavButtonHoverExit">
                <Button fx:id="logoutButton" onAction="#onLogoutClicked" styleClass="button-transparent">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/logout.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Logout" styleClass="nav-label"/>
            </VBox>

            <!-- Separator -->
            <Region prefWidth="10"/>
            <Separator orientation="VERTICAL" prefHeight="50" styleClass="nav-separator"/>

            <!-- Search Bar -->
            <TextField fx:id="searchField" promptText="Search card by name"
                       prefWidth="350" styleClass="text-field-custom"/>

            <!-- Search Button -->
            <Button text="Search" onAction="#onSearchClicked" styleClass="button-accent">
                <graphic>
                    <FontIcon iconLiteral="fas-search" iconSize="14" iconColor="white"/>
                </graphic>
            </Button>

            <!-- Filter by Set as MenuButton -->
            <MenuButton fx:id="setFilterButton" text="Filtra per set" styleClass="button-filter"
                        style="-fx-font-size: 14px; -fx-padding: 8 16;">
                <graphic>
                    <FontIcon iconLiteral="fas-filter" iconSize="14" iconColor="white"/>
                </graphic>
            </MenuButton>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- User Profile Section -->
            <HBox spacing="12" alignment="CENTER">

                <!-- Profile Picture with Username -->
                <VBox alignment="CENTER" spacing="5">
                    <VBox alignment="CENTER" styleClass="profile-container">
                        <ImageView fx:id="profileImageView" fitWidth="40" fitHeight="40" preserveRatio="false">
                            <image>
                                <javafx.scene.image.Image url="@../icons/collectorpp.png"/>
                            </image>
                            <clip>
                                <javafx.scene.shape.Circle centerX="20" centerY="20" radius="20"/>
                            </clip>
                        </ImageView>
                    </VBox>
                    <Label fx:id="usernameLabel" text="Username" styleClass="profile-username"/>
                </VBox>
            </HBox>
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <StackPane styleClass="bg-main">
            <!-- Initial View - View Popular Cards Button -->
            <VBox fx:id="initialViewBox" alignment="CENTER" spacing="30" styleClass="bg-main">
                <VBox alignment="CENTER" spacing="20" styleClass="bg-panel"
                      style="-fx-padding: 60; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);">
                    <Label text="POPULAR CARDS" styleClass="label-title"
                           style="-fx-font-family: 'Playfair Display', 'Georgia', serif;"/>
                    <Label text="Discover the most popular cards in the community" styleClass="label-subtitle"
                           style="-fx-font-style: italic;"/>
                    <Button fx:id="viewPopularCardsButton" onAction="#onViewPopularCardsClicked"
                            text="View Popular Cards" styleClass="button-accent"
                            style="-fx-font-size: 18px; -fx-padding: 15 40 15 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0, 0, 3);">
                        <graphic>
                            <FontIcon iconLiteral="fas-star" iconSize="18" iconColor="white"/>
                        </graphic>
                    </Button>
                </VBox>
            </VBox>

            <!-- Cards Grid View -->
            <VBox fx:id="cardsViewBox" spacing="20" styleClass="bg-main"
                  style="-fx-padding: 20;" visible="false" managed="false">

                <!-- Header -->
                <HBox alignment="CENTER">
                    <Label text="POPULAR CARDS" styleClass="label-title"
                           style="-fx-font-size: 36px; -fx-font-family: 'Playfair Display', 'Georgia', serif; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 2);"/>
                </HBox>

                <!-- Cards Grid in ScrollPane -->
                <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane-custom"
                            VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="cardsFlowPane" hgap="20" vgap="20" styleClass="bg-main"
                                  style="-fx-padding: 10;">

                            <!-- Cards will be populated dynamically -->

                        </FlowPane>
                    </content>
                </ScrollPane>

            </VBox>
        </StackPane>
    </center>

</BorderPane>
