<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.storehomepage.FXStoreHPView"
            prefHeight="500.0" prefWidth="700.0"
            stylesheets="@../styles/theme.css"
            styleClass="bg-main">

    <children>
        <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
            <children>
                <!-- Welcome Header -->
                <Label fx:id="welcomeLabel" text="Benvenuto Store!" styleClass="label-title"
                       style="-fx-font-size: 24px;"/>

                <Separator styleClass="nav-separator"/>

                <!-- Store Actions -->
                <Label text="Gestione Store" styleClass="text-primary"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <HBox spacing="15.0">
                    <children>
                        <Button text="Gestisci Inventario" prefWidth="200.0" prefHeight="50.0"
                                styleClass="button-accent"/>
                        <Button text="Visualizza Ordini" prefWidth="200.0" prefHeight="50.0"
                                styleClass="button-accent"/>
                        <Button text="Statistiche Vendite" prefWidth="200.0" prefHeight="50.0"
                                styleClass="button-accent"/>
                    </children>
                </HBox>

                <Separator styleClass="nav-separator"/>

                <!-- Store Info -->
                <Label text="Informazioni Store" styleClass="text-primary"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <HBox spacing="15.0">
                    <children>
                        <Button text="Profilo Store" prefWidth="200.0" prefHeight="50.0"
                                styleClass="button-accent"/>
                        <Button text="Impostazioni" prefWidth="200.0" prefHeight="50.0"
                                styleClass="button-accent"/>
                    </children>
                </HBox>

            </children>
        </VBox>

        <!-- Bottom Actions -->
        <HBox spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Button text="Logout" onAction="#onLogoutClicked" prefWidth="100.0"
                        style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-cursor: hand;"/>
                <Button text="Esci" onAction="#onExitClicked" prefWidth="100.0"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-cursor: hand;"/>
            </children>
        </HBox>

        <!-- Persistence indicator -->
        <Label text="Store Account" styleClass="text-secondary"
               style="-fx-font-size: 10px; -fx-font-weight: bold;"
               AnchorPane.bottomAnchor="5.0"
               AnchorPane.leftAnchor="10.0"/>
    </children>

</AnchorPane>
