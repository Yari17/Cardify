<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.javafx.FXManageTradeView"
            prefHeight="800.0" prefWidth="1400.0"
            stylesheets="@../styles/theme.css, @../styles/navbar.css"
            styleClass="bg-main">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="nav-bar">

            <!-- Left Navigation Icons with Labels -->
            <!-- Homepage Button -->
            <VBox alignment="CENTER" spacing="5" styleClass="nav-button-container"
                  onMouseEntered="#onNavButtonHoverEnter"
                  onMouseExited="#onNavButtonHoverExit">
                <Button fx:id="homeButton" onAction="#onHomeClicked" styleClass="button-transparent">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/homepage.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Homepage" styleClass="nav-label"/>
            </VBox>

            <!-- Collection Button -->
            <VBox alignment="CENTER" spacing="5" styleClass="nav-button-container"
                  onMouseEntered="#onNavButtonHoverEnter"
                  onMouseExited="#onNavButtonHoverExit">
                <Button fx:id="collectionButton" onAction="#onCollectionClicked" styleClass="button-transparent">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/collection.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Collection" styleClass="nav-label"/>
            </VBox>

            <!-- Live Trade Button -->
            <VBox alignment="CENTER" spacing="5" styleClass="nav-button-container"
                  onMouseEntered="#onNavButtonHoverEnter"
                  onMouseExited="#onNavButtonHoverExit">
                <Button fx:id="liveTradeButton" onAction="#onLiveTradeClicked" styleClass="button-transparent">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/trading-card.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Trade" styleClass="nav-label"/>
            </VBox>

            <!-- Trade Button (disabled when on trade page) -->
            <VBox alignment="CENTER" spacing="5" styleClass="nav-button-container">
                <Button fx:id="tradeButton" styleClass="button-transparent" disable="true">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/trade.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Manage Trades" styleClass="nav-label-disabled" style="-fx-text-fill: #9CA3AF;"/>
            </VBox>

            <!-- Logout Button -->
            <VBox fx:id="logoutButtonContainer" alignment="CENTER" spacing="5" styleClass="nav-button-container"
                  onMouseEntered="#onNavButtonHoverEnter"
                  onMouseExited="#onNavButtonHoverExit">
                <Button fx:id="logoutButton" onAction="#onLogoutClicked" styleClass="button-transparent">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                            <image>
                                <javafx.scene.image.Image url="@../icons/logout.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label text="Logout" styleClass="nav-label"/>
            </VBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- User Profile Section -->
            <HBox spacing="12" alignment="CENTER">
                <!-- Profile Picture with Username -->
                <VBox alignment="CENTER" spacing="5">
                    <VBox alignment="CENTER" styleClass="profile-container">
                        <ImageView fx:id="profileImageView" fitWidth="40" fitHeight="40" preserveRatio="false">
                            <image>
                                <javafx.scene.image.Image url="@../icons/collectorpp.png"/>
                            </image>
                            <clip>
                                <javafx.scene.shape.Circle centerX="20" centerY="20" radius="20"/>
                            </clip>
                        </ImageView>
                    </VBox>
                    <Label fx:id="usernameLabel" text="Username" styleClass="profile-username"/>
                </VBox>
            </HBox>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="10" styleClass="bg-main">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Proposte di scambio in attesa" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <ListView fx:id="pendingTradesList" VBox.vgrow="ALWAYS" styleClass="list-view-dark"/>

            <Label text="Proposte concluse" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #E5E7EB; -fx-padding: 10 0 0 0;"/>
            <ListView fx:id="concludedTradesList" VBox.vgrow="ALWAYS" styleClass="list-view-dark"/>
        </VBox>
    </center>

</BorderPane>

