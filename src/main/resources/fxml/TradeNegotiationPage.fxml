<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.negotiation.FXNegotiationView" prefWidth="820" prefHeight="620">
    <top>
        <Label text="Proposta di Scambio" style="-fx-font-size:20px; -fx-font-weight:bold; -fx-padding:10;" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding:12;">
            <HBox spacing="15">
                <VBox spacing="8" VBox.vgrow="ALWAYS">
                    <Label text="Selezionate (Proposte)" style="-fx-font-size:14px; -fx-font-weight:bold;" />
                    <ListView fx:id="proposedList" prefWidth="360" prefHeight="320" />
                </VBox>

                <VBox spacing="8" VBox.vgrow="ALWAYS">
                    <Label text="Carta richiesta" style="-fx-font-size:14px; -fx-font-weight:bold;" />
                    <ListView fx:id="requestedList" prefWidth="360" prefHeight="320" />
                </VBox>
            </HBox>

            <VBox spacing="6">
                <Label text="La tua collezione" style="-fx-font-size:14px; -fx-font-weight:bold;" />
                <ListView fx:id="inventoryList" prefWidth="740" prefHeight="160" />
                <HBox spacing="8" style="-fx-padding:6; -fx-alignment:center-left;">
                    <Label text="Scegli Store:" />
                    <ComboBox fx:id="storeComboBox" prefWidth="220" />
                    <Label text="Data (YYYY-MM-DD):" />
                    <TextField fx:id="meetingDateField" promptText="YYYY-MM-DD" prefWidth="140" />
                </HBox>
                <HBox spacing="8" style="-fx-padding:6; -fx-alignment:center-right;">
                    <Button fx:id="addButton" text="Aggiungi" />
                    <Button fx:id="removeButton" text="Rimuovi" />
                    <Button fx:id="confirmButton" text="Conferma proposta" style="-fx-font-weight:bold;" />
                    <Button fx:id="cancelButton" text="Annulla" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
